<% if @pet.errors.any? %>
  <ul class="list-unstyled">
    <% @pet.errors.full_messages.each do |msg| %>
      <li class="alert alert-danger" role="alert"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @pet, url: pets_path, html: { multipart: true } do |form| %>

  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, class: "btn btn-info"%>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :race %>
    <%= form.text_field :race, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-success">
    CREATE
  </button>

<% end %>
